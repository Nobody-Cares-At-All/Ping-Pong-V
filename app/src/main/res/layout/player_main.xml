<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:background="@color/laranja">

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textColor="@color/white"
            android:background="@drawable/textedit_redondo"
            android:padding="10dp"
            android:gravity="center_horizontal"/>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="150dp"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle"
            android:backgroundTint="@color/laranja_e"
            android:layout_gravity="center"
            android:background="@drawable/tabela_redondo">
>

            <!-- Header -->
            <TableRow
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Number Of Players"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <TextView
                    android:text="Records"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:padding="8dp" />
            </TableRow>

            <!-- Linha 1 -->
            <TableRow
                android:padding="8dp">

                <TextView
                    android:text="1 Player"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="8dp" />

                <TextView
                    android:text="0 Pts"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:padding="8dp" />
            </TableRow>

            <!-- Linha 2 -->
            <TableRow
                android:padding="8dp">

                <TextView
                    android:text="2 Players"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="8dp" />

                <TextView
                    android:text="0 Pts"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:padding="8dp" />
            </TableRow>

            <!-- Linha 3 -->
            <TableRow
                android:padding="8dp">

                <TextView
                    android:text="4 Players"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="8dp" />

                <TextView
                    android:text="0 Pts"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:padding="8dp" />
            </TableRow>
        </TableLayout>


        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Player"
            android:backgroundTint="@color/blue"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Players"
            android:backgroundTint="@color/blue"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Palyers"
            android:backgroundTint="@color/blue"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>