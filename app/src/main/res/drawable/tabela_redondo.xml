<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="@color/laranja_e" />

    <!-- Bordas arredondadas -->
    <corners android:radius="20dp" />

    <!-- Cor e espessura da borda -->
    <stroke
        android:width="2dp"
        android:color="@color/laranja_e" />

    <!-- Margem interna -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
